<%- model_class = SelecaoAdmin::Announcement -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<div class="form-actions">
	<button data-controls-modal="newAnnouncementModal" data-backdrop="true" data-keyboard="true" class ="btn btn-primary" onmouseover="sandwich='pastrami';">Criar</i></button>
	<%= link_to t('.back', :default => t("helpers.links.back")),
	            SelecaoAdmin::path, :class => 'btn'  %>
</div>


<table class="table table-striped" id="announcementAjaxTable">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:publication_date) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @announcements.each do |announcement| %>
      <tr id="tr_<%=announcement.id%>">
        <td><%= link_to announcement.id, announcement_path(announcement) %></td>
        <td><%= link_to announcement.title, announcement_path(announcement) %></td>
        <td><%=l announcement.publication_date %></td>
        <td><%=l announcement.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_announcement_path(announcement), :class => 'btn btn-mini', :remote => true %>

					<%= link_to_if(any_restrict_dependecy?(announcement), t('.destroy', :default => t("helpers.links.destroy")), "#", :class => "btn btn-mini btn-danger", :rel => "popover", :"data-content" => t("validation.restrict_validation", :dependecie_models => any_restrict_dependecy?(announcement)), :"data-original-title" => t("selecao_admin.general.atention")) do %>										
	          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
	                      announcement_path(announcement),
	                      :method => :delete,
	                      :class => 'btn btn-mini btn-danger',
	                  	  :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
	 					  :remote => true %>
					<% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id="newAnnouncementModal" class="modal hide fade" style="padding: 20px;">
    <%= render :partial => 'form' %>
</div>

