<%- model_class = SelecaoAdmin::Announcement -%>
<div class="page-header">
  <h1><%= @announcement.title %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @announcement.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:publication_date) %>:</strong></dt>
  <dd><%=l @announcement.publication_date %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              announcements_path, :class => 'btn'  %>
  <%= link_to edit_icon,
              edit_announcement_path(@announcement), :class => 'btn' %>
  <%= link_to destroy_icon,
              announcement_path(@announcement),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>

<%= render :partial => 'selecao_admin/sidebars/announcement_enrollment' %>
<hr>