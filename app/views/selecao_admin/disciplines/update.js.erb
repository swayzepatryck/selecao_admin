<%- if @discipline.errors.any? %>
  console.log('Error');
	$("#editDisciplineModal").html("<%= escape_javascript(render 'form') %>")	
<%- else %>
  console.log('Atualizado');
	/* Removendo a linha */
	$('#disciplineAjaxTable').dataTable().fnDeleteRow( document.getElementById("tr_<%=@discipline.id%>"));		
  $('#editDisciplineModal').modal('hide');
	var addId = $('#disciplineAjaxTable').dataTable().fnAddData( [
		"<%=escape_javascript(link_to @discipline.id, discipline_path(@discipline))%>",
		"<%=escape_javascript(link_to @discipline.name, discipline_path(@discipline))%>",
		"<%=escape_javascript(link_to t('.edit', :default => t('helpers.links.edit')), edit_discipline_path(@discipline), :class => 'btn btn-mini', :remote => true)%>" +
		<%- if any_restrict_dependecy?(@discipline) %>
			" <%=escape_javascript(link_to t('.destroy', :default => t('helpers.links.destroy')), '#', :class => 'btn btn-mini btn-danger', :rel => 'popover', :'data-content' => t('validation.restrict_validation', :dependecie_models => any_restrict_dependecy?(@discipline)), :'data-original-title' => t('selecao_admin.general.atention'))%>"
		<%- else %>
			" <%=escape_javascript(link_to t('.destroy', :default => t('helpers.links.destroy')), discipline_path(@discipline), :method => :delete, :class => 'btn btn-mini btn-danger', :confirm => t('.confirm', :default => t('helpers.links.confirm', :default => 'Are you sure?')), :remote => true)%>"				
		<%- end %>
	]);	
 	var theNode = $('#disciplineAjaxTable').dataTable().fnSettings().aoData[addId[0]].nTr;
	$(theNode).attr("id", "tr_<%=@discipline.id%>");		
<%- end %>

