<%- model_class = SelecaoAdmin::Address -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%=c model_class.human_attribute_name(:street) %>:</strong></dt>
  <dd><%=c @address.street %></dd>
  <dt><strong><%= model_class.human_attribute_name(:number) %>:</strong></dt>
  <dd><%=c @address.number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:complement) %>:</strong></dt>
  <dd><%=c @address.complement %></dd>
  <dt><strong><%= model_class.human_attribute_name(:neighborhood) %>:</strong></dt>
  <dd><%=c @address.neighborhood %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city_id) %>:</strong></dt>
  <dd><%=c @address.city.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:state_id) %>:</strong></dt>
  <dd><%=c @address.city.state.name%></dd>
  <dt><strong><%= model_class.human_attribute_name(:postal_code) %>:</strong></dt>
  <dd><%=c @address.postal_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reference_point) %>:</strong></dt>
  <dd><%=c @address.reference_point %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address_type_id) %>:</strong></dt>
  <dd><%=c @address.address_type.title %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              addresses_path, :class => 'btn'  %>
  <%= link_to edit_icon,
              edit_address_path(@address), :class => 'btn' %>
  <%= link_to destroy_icon,
              address_path(@address),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
