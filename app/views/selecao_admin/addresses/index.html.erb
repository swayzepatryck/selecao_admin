<%- model_class = SelecaoAdmin::Address -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:address_type_id) %></th>
      <th><%= model_class.human_attribute_name(:street) %></th>
      <th><%= model_class.human_attribute_name(:number) %></th>
      <th><%= model_class.human_attribute_name(:complement) %></th>
      <th><%= model_class.human_attribute_name(:neighborhood) %></th>
      <th><%= model_class.human_attribute_name(:reference_point) %></th>
      <th><%= model_class.human_attribute_name(:city_id) %></th>
      <th><%= model_class.human_attribute_name(:state_id) %></th>
      <th><%= model_class.human_attribute_name(:postal_code) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%=c link_to address.resource.class.model_name.human, address.resource %></td>
        <td><%=c address.street %></td>
        <td><%=c address.number %></td>
        <td><%=c address.complement %></td>
        <td><%=c address.neighborhood %></td>
        <td><%=c address.city.name %></td>
        <td><%=c address.city.state.name %></td>
        <td><%=c address.postal_code %></td>
        <td>
          <%= link_to edit_icon,
                      edit_address_path(address), :class => 'btn btn-mini' %>
          <%= link_to destroy_icon,
                     	address_path(address),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_address_path,
            :class => 'btn btn-primary' %>
