<%- model_class = SelecaoAdmin::StudentQuota -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<div class="form-actions">
	<%= link_to 'Criar', "#", :"data-controls-modal" => "newStudentQuotaModal", :"data-backdrop" => true, :"data-keyboard" => true, :class => "btn btn-primary", :onmouseover => "sandwich='pastrami';"  %>
	<%= link_to t('.back', :default => t("helpers.links.back")),
	            SelecaoAdmin::path, :class => 'btn'  %>
</div>

<table class="table table-striped" id="studentQuotaAjaxTable">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th width="79%"><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:abbreviation) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @student_quotas.each do |student_quota| %>
      <tr id="tr_<%=student_quota.id%>">
        <td><%= link_to student_quota.id, student_quota_path(student_quota) %></td>
        <td><%= link_to student_quota.title, student_quota_path(student_quota) %></td>
        <td><%= student_quota.abbreviation %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_student_quota_path(student_quota), :class => 'btn btn-mini', :remote => true %>
					<%= link_to_if(any_restrict_dependecy?(student_quota), t('.destroy', :default => t("helpers.links.destroy")), "#", :class => "btn btn-mini btn-danger", :rel => "popover", :"data-content" => t("validation.restrict_validation", :dependecie_models => any_restrict_dependecy?(student_quota)), :"data-original-title" => t("selecao_admin.general.atention")) {%>					
	          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
	                      student_quota_path(student_quota),
	                      :method => :delete,
	                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
	                      :class => 'btn btn-mini btn-danger',
												:remote => true %>
					 <%}%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id="newStudentQuotaModal" class="modal hide fade" style="padding: 20px;">
  <%= render :partial => 'form' %>
</div>


