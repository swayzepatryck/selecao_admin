<%- if @student_quota.errors.any? %>
  console.log('Error');
	$("#editStudentQuotaModal").html("<%= escape_javascript(render 'form') %>")	
<%- else %>
  console.log('Atualizado');
	/* Removendo a linha */
	$('#studentQuotaAjaxTable').dataTable().fnDeleteRow( document.getElementById("tr_<%=@student_quota.id%>"));		
  $('#editStudentQuotaModal').modal('hide');
	var addId = $('#studentQuotaAjaxTable').dataTable().fnAddData( [
		"<%=escape_javascript(link_to @student_quota.id, student_quota_path(@student_quota))%>",
		"<%=escape_javascript(link_to @student_quota.title, student_quota_path(@student_quota))%>",
		"<%=escape_javascript(@student_quota.abbreviation)%>",
		"<%=escape_javascript(link_to t('.edit', :default => t('helpers.links.edit')), edit_student_quota_path(@student_quota), :class => 'btn btn-mini', :remote => true)%>" +
		<% if any_restrict_dependecy?(@student_quota) %>
			" <%=escape_javascript(link_to t('.destroy', :default => t('helpers.links.destroy')), '#', :class => 'btn btn-mini btn-danger', :rel => 'popover', :'data-content' => t('validation.restrict_validation', :dependecie_models => any_restrict_dependecy?(@student_quota)), :'data-original-title' => t('selecao_admin.general.atention'))%>"
		<% else %>
			" <%=escape_javascript(link_to t('.destroy', :default => t('helpers.links.destroy')), student_quota_path(@student_quota), :method => :delete, :class => 'btn btn-mini btn-danger', :confirm => t('.confirm', :default => t('helpers.links.confirm', :default => 'Are you sure?')), :remote => true)%>"				
		<% end %>
	]);	
 	var theNode = $('#studentQuotaAjaxTable').dataTable().fnSettings().aoData[addId[0]].nTr;
	$(theNode).attr("id", "tr_<%=@student_quota.id%>");		
<%- end %>
