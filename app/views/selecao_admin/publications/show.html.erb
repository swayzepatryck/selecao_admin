<%- model_class = SelecaoAdmin::Publication -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @publication.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:publication_text) %>:</strong></dt>
  <dd><%= simple_format(@publication.publication_text) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:publication_category_id) %>:</strong></dt>
  <dd><%= @publication.publication_category.title %></dd>
</dl>

<div class="form-actions">
  <%= link_to back_icon,
              publications_path, :class => 'btn'  %>
  <%= link_to edit_icon,
              edit_publication_path(@publication), :class => 'btn' %>
  <%= link_to destroy_icon,
              publication_path(@publication),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
