<%- model_class = Phone -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:phone_type_id) %></th>
      <th><%= model_class.human_attribute_name(:prefix) %></th>
      <th><%= model_class.human_attribute_name(:suffix) %></th>
      <th><%= model_class.human_attribute_name(:resource_id) %></th>
      <th><%= model_class.human_attribute_name(:resource_type) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @phones.each do |phone| %>
      <tr>
        <td><%= link_to phone.id, selecao_admin_phone_path(phone) %></td>
        <td><%= phone.phone_type_id %></td>
        <td><%= phone.prefix %></td>
        <td><%= phone.suffix %></td>
        <td><%= phone.resource_id %></td>
        <td><%= phone.resource_type %></td>
        <td><%=l phone.created_at %></td>
        <td>
          <%= link_to edit_icon,
                      edit_selecao_admin_phone_path(phone), :class => 'btn btn-mini' %>
          <%= link_to destroy_icon,
                      selecao_admin_phone_path(phone),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_selecao_admin_phone_path,
            :class => 'btn btn-primary' %>
