<%= form_for @phone, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :phone_type_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :phone_type_id, SelecaoAdmin::PhoneType.all, :id, :title, :prompt => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :prefix, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :prefix, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :suffix, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :suffix, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                phones_path, :class => 'btn' %>
  </div>
<% end %>
