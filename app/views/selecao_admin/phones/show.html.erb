<%- model_class = Phone -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:phone_type_id) %>:</strong></dt>
  <dd><%= @phone.phone_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:prefix) %>:</strong></dt>
  <dd><%= @phone.prefix %></dd>
  <dt><strong><%= model_class.human_attribute_name(:suffix) %>:</strong></dt>
  <dd><%= @phone.suffix %></dd>
  <dt><strong><%= model_class.human_attribute_name(:resource_id) %>:</strong></dt>
  <dd><%= @phone.resource_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:resource_type) %>:</strong></dt>
  <dd><%= @phone.resource_type %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              selecao_admin_phones_path, :class => 'btn'  %>
  <%= link_to edit_icon,
              edit_selecao_admin_phone_path(@phone), :class => 'btn' %>
  <%= link_to destroy_icon,
              selecao_admin_phone_path(@phone),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
