<fieldset class="parent_fieldset">
	<h4><%= action_name == 'edit' ? "#{f.object.question}" : 'Nova Pergunta'%></h4>
	<hr>
	<div class="control-group">
    <%= f.label :sequence_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sequence_number, :class => 'text_field span1' %>
    </div>
  </div>	  		
	
	<div class="control-group">
    <%= f.label :question, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :question, :class => 'text_field span8' %>
    </div>
  </div>	  		
	<%= f.hidden_field :_destroy %>
	<%= link_to t("selecao_admin.general.remove_survey_question"), '#', :class => "remove_fields pull-right" %>
	<br/>
	<hr>

	<%= f.fields_for :survey_question_options do |builder| %>		
		<%= render :partial => 'survey_question_option_fields', :locals => {:f => builder} %>
	<% end %>
	<%= link_to_add_fields t("selecao_admin.general.add_survey_question_option"), f, :survey_question_options %>
	
  		
</fieldset><br>
