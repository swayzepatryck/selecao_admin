<%- model_class = SelecaoAdmin::PublicationCategory -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @publication_category.title %></dd>
</dl>

<div class="form-actions">
  <%= link_to back_icon,
              publication_categories_path, :class => 'btn'  %>
  <%= link_to edit_icon,
              edit_publication_category_path(@publication_category), :class => 'btn' %>
  <%= link_to destroy_icon,
              publication_category_path(@publication_category),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
